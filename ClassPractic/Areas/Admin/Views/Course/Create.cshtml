@using ClassPractic.Areas.Admin.ViewModels


@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}


<div class="container my-5 ">

   
    <form class="forms-sampl" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
         
         <span>Name</span>
        
         <textarea class="form-control" id="category-text" rows="3" asp-for="Name"></textarea>

        <span class="text-danger" asp-validation-for="Name"></span>
        
       </div>

       
       
       <div class="form-group">
        
        <span>Description</span>

        <textarea class="form-control" id="category-text" rows="3" asp-for="Description"></textarea>

        <span class="text-danger" asp-validation-for="Description"></span>

       </div>
       
        
       
       <div class="form-group">
         
            <span>Price</span>

           <input type="number" class="form-control" id="customFile" asp-for="Price" />

           <span class="text-danger" asp-validation-for="Price"></span>
        </div>

       
        <div class="form-group">
         
          <span>Sales</span>

          <input type="number" class="form-control" id="customFile" asp-for="Sales" />

          <span class="text-danger" asp-validation-for="Sales"></span>

        </div>

        <div class="form-group">
          
            
            <span>Author</span>
       
            <select class="form-control" id="category-text" rows="3" asp-for="CourseAuthorId" asp-items="@ViewBag.Authors"></select>

        
            <span class="text-danger" asp-validation-for="CourseAuthorId"></span>

        </div>

        
        
        <div class="form-group">
            <span>Photos</span>
           
            <input class="form-control" id="customFile" asp-for="Photos"/>

           <span class="text-danger" asp-validation-for="Photos"></span>


        </div>

   
        
        
        <div class="buttons my-3">

          <button type="submit" class="btn btn-primary mr-2">Submit</button>
           <a class="btn btn-light" asp-action="Index">Cancel</a>
      </div>


    </form>
</div>